<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net5.0</TargetFramework>
		<ContentTargetFolders>.</ContentTargetFolders>

		<Product>uSync</Product>
		<PackageId>uSync</PackageId>
		<Title>uSync</Title>

		<VersionPrefix>9.0.0</VersionPrefix>
		<Authors>Kevin Jump</Authors>
		<Company>Jumoo</Company>

		<PackageIconUrl></PackageIconUrl>
		<PackageLicenseExpression>MPL-2.0</PackageLicenseExpression>
		<PackageProjectUrl>https://jumoo.co.uk/uSync</PackageProjectUrl>
		<PackageTags>Umbraco</PackageTags>

		<RepositoryUrl>https://github.com/KevinJump/uSync8</RepositoryUrl>

		<Description>
			Core serializers for uSync to read / write information to / from Umbraco CMS.
		</Description>
		<PackageReleaseNotes>
			9.0 - Dotnet core version
		</PackageReleaseNotes>
	
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Umbraco.Cms.Web.BackOffice" Version="9.0.0-beta001.20210423.3" />
		<PackageReference Include="Umbraco.Cms.Web.Website" Version="9.0.0-beta001.20210423.3" />
	</ItemGroup>


	<ItemGroup>
		<Compile Remove="Commands\**" />
		<EmbeddedResource Remove="Commands\**" />
		<None Remove="Commands\**" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="App_Plugins\uSync\**\*.*">
			<ExcludeFromSingleFile>true</ExcludeFromSingleFile>
			<CopyToPublishDirectory>Always</CopyToPublishDirectory>
		</Content>
		<None Include="build\**\*.*">
			<Pack>true</Pack>
			<PackagePath>Build</PackagePath>
		</None>
	</ItemGroup>
	<ItemGroup>
		<ProjectReference Include="..\uSync.Core\uSync.Core.csproj" />
	</ItemGroup>

</Project>

<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <uSyncContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\uSync\**\*.*</uSyncContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyuSyncAssets" BeforeTargets="Build">
        <ItemGroup>
            <uSyncContentFiles Include="$(uSyncContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying uSync files: $(uSyncContentFilesPath) - #@(uSyncContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(uSyncContentFiles)"
            DestinationFiles="@(uSyncContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\uSync\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="ClearuSyncAssets" BeforeTargets="Clean">
        <ItemGroup>
            <testpackageDir Include="$(MSBuildProjectDirectory)\App_Plugins\uSync\" />
        </ItemGroup>
        <Message Text="Clear old uSync package data"  Importance="high" />
        <RemoveDir Directories="@(testpackageDir)"  />
    </Target>

</Project>

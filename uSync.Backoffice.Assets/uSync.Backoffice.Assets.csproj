<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
		<ContentTargetFolders>.</ContentTargetFolders>

		<Product>uSync.BackOffice.Assets</Product>
		<PackageId>uSync.BackOffice.Assets</PackageId>
		<Title>uSync.BackOffice.Assets</Title>

		<VersionPrefix>9.0.0</VersionPrefix>
		<Authors>Kevin Jump</Authors>
		<Company>Jumoo</Company>

		<PackageIconUrl></PackageIconUrl>
		<PackageLicenseExpression>MPL-2.0</PackageLicenseExpression>
		<PackageProjectUrl>https://jumoo.co.uk/uSync</PackageProjectUrl>
		<PackageTags>Umbraco</PackageTags>

		<RepositoryUrl>https://github.com/KevinJump/uSync8/tree/core/main</RepositoryUrl>

		<Copyright>Jumoo @ 2013-2021</Copyright>
		<Description>Core serializers for uSync to read / write information to / from Umbraco CMS.</Description>
		<PackageReleaseNotes>
			9.0 - Dotnet core version
		</PackageReleaseNotes>

		<IncludeBuildOutput>false</IncludeBuildOutput>

	</PropertyGroup>

	<ItemGroup>
		<Content Include="App_Plugins\usync\**\*.*">
			<ExcludeFromSingleFile>true</ExcludeFromSingleFile>
			<CopyToPublishDirectory>Always</CopyToPublishDirectory>
		</Content>
		<None Include="build\**\*.*">
			<Pack>true</Pack>
			<PackagePath>build</PackagePath>
		</None>
	</ItemGroup>


</Project>
